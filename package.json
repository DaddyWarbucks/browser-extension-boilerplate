{
  "version": "1.0.1",
  "name": "react-browser-extension-boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/ElForastero/react-browser-extension-boilerplate"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production yarn webpack -c webpack.config.js --mode production",
    "start": "cross-env NODE_ENV=development yarn webpack -c webpack.config.js --mode development -w",
    "lint": "eslint src/ --ext .jsx --ext .js",
    "fixcode": "eslint src/ --ext .jsx --ext .js --fix",
    "prepush": "npm run fixcode"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@svgr/webpack": "^4.3.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "cross-env": "^6.0.3",
    "css-loader": "^4.2.1",
    "eslint": "^7.7.0",
    "eslint-config-babel": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-standard": "^4.0.1",
    "html-webpack-plugin": "^4.0.0-beta.8",
    "prettier": "^2.0.5",
    "raw-loader": "^3.1.0",
    "style-loader": "^1.2.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-extension-reloader": "^1.1.1",
    "webpack-manifest-version-sync-plugin": "^0.0.3"
  },
  "dependencies": {
    "bootstrap": "^4.5.2",
    "classnames": "^2.2.6",
    "core-js": "^3.3.3",
    "preact": "^10.0.1",
    "preact-shadow-root": "^1.0.2",
    "prop-types": "^15.7.2",
    "react-switch": "^5.0.1",
    "reactstrap": "^8.5.1",
    "regenerator-runtime": "^0.13.3",
    "styled-components": "^4.4.0",
    "use-click-outside": "^1.1.0",
    "webextension-polyfill": "^0.5.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true
    },
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    },
    "extends": [
      "prettier",
      "prettier/standard",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "trailingComma": "none",
          "singleQuote": true,
          "printWidth": 80
        }
      ]
    }
  }
}